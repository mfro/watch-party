{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "importsNotUsedAsValues": "remove",
    "moduleResolution": "node",
    "preserveValueImports": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "preserve"
  }
}
